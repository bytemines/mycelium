{
  "name": "mycelium",
  "private": true,
  "version": "0.1.0",
  "description": "Universal AI Tool Orchestrator - Sync skills, MCPs, and memory across Claude Code, Codex, Gemini CLI, OpenCode, OpenClaw, Cursor, VS Code, and Antigravity",
  "author": "Mycelium Contributors",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.29.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "pnpm build && changeset publish"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "better-sqlite3"]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  }
}
